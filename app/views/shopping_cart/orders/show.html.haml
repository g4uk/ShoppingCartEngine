%main.container.general-main-wrap
  %h1.general-title-margin= "#{t('.order')} #{@order.id}"
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle.mt-0= t('.shipping_address')
      = render 'shopping_cart/addresses/address', address: @order_presenter.shipping_address, complete: true
    .col-sm-3
      %h3.general-subtitle.mt-0= t('.billing_address')
      = render 'shopping_cart/addresses/address', address: @order_presenter.billing_address, complete: true
    .col-sm-3
      %h3.general-subtitle.mt-0= t('.shipments')
      %p.general-address
        = @order.delivery_duration
        %br
        = @order.formatted_delivery_name
    .col-sm-3
      %h3.general-subtitle.mt-0= t('.payment_information')
      %p.general-address
        = @order.formatted_credit_card_number
  = render 'shopping_cart/order_items/order_item_xs', order_items: @order_presenter.order_items, type: 'order'
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      = render 'shopping_cart/checkouts/table_headers'
      = render 'shopping_cart/order_items/order_item', order_items: @order_presenter.order_items, type: 'order'
  .text-center.general-text-right
    = render 'shopping_cart/checkouts/order_summary', order: @order, pull_right: true